<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WebWatcher.UI.Styles">
    <Style TargetType="TextBox" x:Key="MessageBoxTextBoxStyle">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="16"/>
        <Style.Triggers>
            <Trigger Property="Tag" Value="Ok">
                <Setter Property="Background" Value="#66ff66"/>
            </Trigger>
            <Trigger Property="Tag" Value="Warning">
                <Setter Property="Background" Value="#ffdb4d"/>
            </Trigger>
            <Trigger Property="Tag" Value="Error">
                <Setter Property="Background" Value="#ff4d4d"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>