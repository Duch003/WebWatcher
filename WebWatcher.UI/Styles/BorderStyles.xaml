<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WebWatcher.UI.Styles">
    <Style TargetType="Border" x:Key="MessageBoxBorderStyle">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderThickness" Value="4"/>
        <Style.Triggers>
            <Trigger Property="Tag" Value="Ok">
                <Setter Property="BorderBrush" Value="#00cc00"/>
            </Trigger>
            <Trigger Property="Tag" Value="Warning">
                <Setter Property="BorderBrush" Value="#ffcc00"/>
            </Trigger>
            <Trigger Property="Tag" Value="Error">
                <Setter Property="BorderBrush" Value="#ff0000"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>