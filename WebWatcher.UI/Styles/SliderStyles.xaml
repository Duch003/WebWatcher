<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WebWatcher.UI.Styles">
    <Style TargetType="Slider" x:Key="RequestIntervalSliderStyle">
        <Setter Property="Minimum" Value="1"/>
        <Setter Property="Maximum" Value="60"/>
        <Setter Property="Value" Value="15"/>
        <Setter Property="TickPlacement" Value="BottomRight"/>
        <Setter Property="TickFrequency" Value="1"/>
        <Setter Property="AutoToolTipPlacement" Value="TopLeft"/>
        <Setter Property="AutoToolTipPrecision" Value="0"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
</ResourceDictionary>